#include <stdio.h>

int main() {
   int a[3][3], b[3][3], soma[3][3];
   int i, j;
   printf("Informe os numeros da matriz a: ");
   for(i = 0; i<3; i++){
       for(j=0; j<3; j++){
           printf("a[%d][%d]", i, j);
           scanf("%d", &a[i][j]);
       }
   }
   printf("Informe os numeros da matriz a: ");
   for(i = 0; i<3; i++){
       for(j=0; j<3; j++){
           printf("b[%d][%d]", i, j);
           scanf("%d", &b[i][j]);
       }
   }
   for(i = 0; i<3; i++){
       for(j=0; j<3; j++){
           soma[i][j]=a[i][j]+b[i][j];
       }
   }
   for(i = 0; i<3; i++){
       for(j=0; j<3; j++){
           printf("\nsoma das matrizes %d", soma[i][j]);
       }
   }
   
    return 0;
}
