#include <stdio.h>
#include <string.h>
int main() {
    int opcao;
    printf("Digite um numero de 1 a 7: "); scanf("%d", &opcao);
    
    switch(opcao){
        case 1:
            printf("Domingo");
        break;
        case 2:
            printf("segunda");
        break;
        case 3:
            printf("Ter√ßa");
        break;
        case 4:
            printf("Quarta");
        break;
        case 5:
            printf("Quinta");
        break;
        case 6:
            printf("Sexta");
        break;
        case 7:
            printf("Sabado");
        break;
        default:
        printf("Invalido");
    }
    return 0;
}
