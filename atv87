// Online C compiler to run C program online
#include <stdio.h>

int main() {
    float peDireito = 4.00;
    float peEsquerdo = 3.50 * 2;
    float total;
    int qgalinha;
    printf("Informe a quantidade de galinhas: ");
    scanf("%d", &qgalinha);
    total = qgalinha * (peDireito + peEsquerdo);
    
    printf("Custo total: %.2f", total);
    return 0;
}
