#include <stdio.h>
 
 int main(){
    int n;
    int fator=1;
    
    printf("Digite um número inteiro e positivo: ");
    scanf("%d", &n);
    
    if (n < 0) {
        printf("Número inválido! Digite um valor positivo.\n");
        return 1;
    }
    for (int i = 1; i <= n; i++) {
        fator *= i;
    }
     printf("O fatorial de %d é: %d\n", n, fator);
    
    return 0;
}
