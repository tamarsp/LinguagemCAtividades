#include <stdio.h>

int main() {
    int mes;
    const char* estacao;

    printf("Digite o número do mês (1 a 12): ");
    scanf("%d", &mes);

    switch (mes) {
        case 1:
        case 2:
        case 3:
            estacao = "Verão";
            break;
        case 4:
        case 5:
        case 6:
            estacao = "Outono";
            break;
        case 7:
        case 8:
        case 9:
            estacao = "Inverno";
            break;
        case 10:
        case 11:
        case 12:
            estacao = "Primavera";
            break;
        }
    return 0;
}
