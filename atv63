#include <stdio.h>
#include <string.h>
int main() {
  int salario, media, soma=0, i = 1;
  
  while(i){
     
      printf("\nInforme seu nome ");
      char nome[10]; fgets(nome, 10, stdin);
      printf(" %s ", nome);
      printf("\nInforme seu salario ");
      scanf("%d", &salario);
      soma += salario;
      printf("soma dos salario são: %d ", soma);
      media = soma / i;
      printf("\nMedia dos salario são: %d ", media);
       i++;
      }
      return 0;
}
